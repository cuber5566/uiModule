<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.ui.uimodule.SquareLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        app:widthWeight="3"
        app:heightWeight="4">

        <com.ui.uimodule.RaisedButton
            android:id="@+id/raisedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="RaisedButton"
            app:rb_backgroundColor="@color/colorAccent"
            app:rb_rippleColor="#FFFFFF"/>

        <com.ui.uimodule.RaisedButton
            android:id="@+id/enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="enable"
            app:rb_backgroundColor="@color/colorAccent"
            app:rb_rippleColor="#FFFFFF"/>

        <com.ui.uimodule.RaisedButton
            android:id="@+id/animationEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="animationEnable"
            app:rb_backgroundColor="@color/colorAccent"
            app:rb_rippleColor="#FFFFFF"/>

    </com.ui.uimodule.SquareLinearLayout>

</RelativeLayout>
